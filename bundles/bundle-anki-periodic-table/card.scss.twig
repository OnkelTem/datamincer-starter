html, body, #qa, #content, #content > div, #card {
  height: 100%;
  margin: 0;
  padding: 0;
}

#card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  align-content: center;
}

.top {
  flex: 1 0 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.bottom {
  flex: 1 0 0;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  align-content: flex-start;
  padding: 5vh 3vh 5vh 3vh;
}

@media #{"(max-aspect-ratio: 800/976)"} {
  .top {
  }
  .bottom {
    padding: 5vw 3vw 5vw 3vw;
  }
}

body.card, body.card.night_mode {
  color: #999;
  background: #ffc;
}

