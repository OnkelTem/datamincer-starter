html, body, #qa, #content, #content > div, #card {
  height: 100%;
  margin: 0;
  padding: 0;
}

#card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  align-content: center;
}

.color {
  flex: 1 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.color .name-code {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  align-content: center;
}

.color .name {
  font-size: 6vh;
  padding: 1vh 2vh;
  color: white;
  font-weight: bold;
  background: rgba(60, 60, 60, 0.5);
}

.color .code {
  font-size: 4vh;
  padding: 0.8vh 1.6vh;
  color: white;
  font-family: monospace;
  font-weight: normal;
  background: rgba(60, 60, 60, 0.3);
  text-transform: lowercase;
}

.color .code:before {
  content: "#";
  color: rgba(255, 255, 255, 0.5);
}

.color-table {
  flex: 2 0 0;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: stretch;
  align-content: flex-start;
  background: white;
  padding: 3vw 5vw;
}

.color-table .group {
  text-align: center;
  color: rgba(100,100,100, 1);
  font-size: 2.6vh;
  line-height: 3vh;
  font-family: sans-serif;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: center;
  align-items: stretch;
  margin-bottom: 3vh;
}

.color-table .group-name {
  width: 18vh;
  text-align: left;
}

.color-table .group-items {
  display: flex;
  flex-direction: row;
}

.color-table .group-items i {
  width: 3vh;
  height: 3vh;
  padding: 0;
  display: block;
  vertical-align: middle;
}

.color-table .group-items i.selected,
.color-table .group-items i:hover {
  transform: scale(2);
  border-radius: 1.8vw;
  box-shadow: 0.3vw 0.3vw 1vw -0.1vw rgba(0,0,0,0.42);
}

.color-table .group-name:hover {
  transform: scale(1);
  border-radius: initial;
  box-shadow: none;
}

@media (min-aspect-ratio: 2/3) and (max-aspect-ratio: 1/1) {
  .color {
    flex: 1 0 0;
  }
  .color .name-code {
    flex-direction: column;
    align-items: flex-end;
  }
  .color .name {
    font-size: 5vh;
  }
  .color .code {
    font-size: 4vh;
  }
  .color-table {
    flex: 1 0 0;
    padding: 3vh 5vw;
  }
  .color-table .group {
    font-size: 1.6vh;
    line-height: 1.8vh;
  }
  .color-table .group-name {
    width: 12vh;
  }
  .color-table .group-items i {
    width: 2vh;
    height: 2vh;
  }
}

@media (max-aspect-ratio: 2/3) {
  .color {
    flex: 1 0 0;
  }
  .color .name-code {
    flex-direction: column;
    align-items: flex-end;
  }
  .color .name {
    font-size: 7vw;
  }
  .color .code {
    font-size: 5vw;
  }
  .color-table {
    flex: 1 0 0;
  }
  .color-table .group {
    font-size: 3vw;
    line-height: 5vw;
    flex-direction: column;
    margin-bottom: 1.5vw;
  }
  .color-table .group-name {
    width: auto;
  }
  .color-table .group-items i {
    width: 3.8vw;
    height: 3.8vw;
  }
}

body.card, body.card.night_mode {
  color: #999;
  background: black;
}

